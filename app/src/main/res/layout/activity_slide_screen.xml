<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chris.planner.SlideScreenActivity">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/new_event_icon"
            android:id="@+id/newEventIcon"
            android:textSize="10dp"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/homeIcon"
            android:layout_marginRight="20dp"
            android:src="@drawable/home_icon"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/calendarIcon" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/calendarIcon"
            android:layout_marginRight="20dp"
            android:textSize="10sp"
            android:src="@drawable/calendar_icon"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/historyIcon"
            android:textSize="10sp"
            android:src="@drawable/history_icon"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/calendarIcon" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/settings_icon"
            android:id="@+id/settingsIcon"
            android:textSize="10dp"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/slideScreenPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2">
    </android.support.v4.view.ViewPager>

</RelativeLayout>
