<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.chris.planner.SlideScreenActivity"
    android:clipToPadding="false"
    android:id="@+id/slideRelativeLayout">


    <android.support.design.widget.TabLayout
        android:id="@+id/settingsTabLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:elevation="6dp"
        android:background="@color/light_colour"
        app:tabTextAppearance="@style/MineCustomTabText"

        />


    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/settingsTabLayout"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:id="@+id/helpIcon"
        android:background="@drawable/help_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
